#!/bin/bash

if [[ -n $(which nvim 2> /dev/null) ]]
then
    OURVIM="nvim -R"
elif [[ -n $(which vim 2> /dev/null) ]]
then
    OURVIM="vim -R"
elif [[ -n $(which vi 2> /dev/null) ]]
then
    OURVIM="view"
else
    OURVIM="view"
fi

if [[ $# -eq 0 ]]
then
    $OURVIM -p $(cat -)
else
    # get file list
    filelist=""
    for f in $@
    do
        if [[ -e $f ]]
        then
            filelist="${filelist} $f"
        else
            filelist="${filelist} $(ls | grep $f)"
        fi
    done
    $OURVIM -p $filelist
fi
