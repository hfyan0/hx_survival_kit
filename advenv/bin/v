#!/bin/bash

if [[ -n $(which nvim 2> /dev/null) ]]
then
    OURVIM="nvim"
elif [[ -n $(which vim 2> /dev/null) ]]
then
    OURVIM="vim"
elif [[ -n $(which vi 2> /dev/null) ]]
then
    OURVIM="vi"
else
    OURVIM="vi"
fi

if [[ $# -eq 0 ]]
then
    $OURVIM -p $(cat -)
else
    # get file list
    filelist=""
    for f in $@
    do
        if [[ -e $f ]]
        then
            filelist="${filelist} $f"
        else
            try="$(ls | grep $f)"
            if [[ -n $try ]]
            then
                filelist="${filelist} ${try}"
            else
                filelist="${filelist} $f"
            fi
        fi
    done
    $OURVIM -p $filelist
fi
