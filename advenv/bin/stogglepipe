#!/usr/bin/env python3
import sys
from datetime import datetime

lines = [line.rstrip() for line in sys.stdin]

if not lines:
    sys.exit()

def remove_end_pipe(s):
    if s.endswith("|"):
        return s[:-1]
    else:
        return s

first_line = lines[0]
first_line_stripped = first_line.lstrip()

indentation = len(first_line) - len(first_line_stripped)
has_pipe = (first_line_stripped[:1] == "|")

if has_pipe:
    for line in lines:
        content = remove_end_pipe(line[indentation:].replace("| ","",1))

        if not content:
            new_line = ""
        elif content.isspace():
            new_line = ""
        else:
            new_line = ' '*indentation + content

        print(new_line)
else:
    for line in lines:
        if len(line) <= indentation:
            new_line = line + \
                       " "*(indentation-len(line)) + \
                       "|" + \
                       line[indentation:]
        else:
            new_line = line[0:indentation] + \
                       "| " + \
                       line[indentation:]
        print(new_line)
